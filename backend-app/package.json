{
  "name": "backend-app",
  "version": "1.0.0",
  "description": "Backend event reminder app",
  "type": "commonjs",
  "main": "dist/index.js",
  "scripts": {
    "clean": "del-cli -f ./dist ./types",
    "lint": "yarn run eslint --fix --ext .ts src tests --cache src tests --cache-location node_modules/.cache/",
    "start": "node ./dist/index.js",
    "dev:build": "tsc --watch",
    "dev:test": "jest --watch",
    "prod:build": "yarn clean && yarn run lint && yarn run tsc",
    "prod:test": "jest --ci --coverage"
  },
  "author": "MathieuGermain",
  "dependencies": {},
  "devDependencies": {
    "@types/jest": "^29.0.1",
    "@types/node": "^18.7.16",
    "@typescript-eslint/eslint-plugin": "^5.36.2",
    "@typescript-eslint/parser": "^5.36.2",
    "del-cli": "^5.0.0",
    "eslint": "^8.23.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.0.3",
    "prettier": "2.7.1",
    "ts-jest": "^29.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.3"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": ["./src/**"],
    "coverageReporters": ["json-summary"],
    "coverageThreshold": {
      "global": {
        "lines": 80
      }
    },
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    }
  }
}
