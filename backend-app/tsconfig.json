{
  "compilerOptions": {
      "target": "ESNext",
      "module": "CommonJS",
      "moduleResolution": "Node",
      "lib": ["ESNext", "DOM"],
      "allowJs": false,
      "sourceMap": true,
      "baseUrl": "./",
      "outDir": "./dist",
      "declaration": true,
      "declarationDir": "./types",
      "strict": true,
      "noImplicitAny": true,
      "strictNullChecks": true,
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "typeRoots": [
        "node_modules/@types"
      ]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "tests/**/*"
  ]
}
